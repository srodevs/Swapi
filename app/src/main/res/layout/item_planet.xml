<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_marginTop="12dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemPlanetCvContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/itemPlanetIv"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:contentDescription="@string/all_image_description"
                android:scaleType="centerCrop"
                tools:src="@drawable/star_wars_logo" />

            <TextView
                android:id="@+id/itemPlanetTvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="4dp"
                android:textStyle="bold"
                tools:text="@string/all_logo_description" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>